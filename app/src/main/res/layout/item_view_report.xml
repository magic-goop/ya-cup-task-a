<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16dp">

    <TextView
        android:id="@+id/tv_report_name"
        android:layout_width="@dimen/dp_0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="Отчет за 13 Ноя. 2021 13:45" />

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/dp_0dp"
        android:layout_height="@dimen/dp_1dp"
        android:layout_marginTop="@dimen/dp_16dp"
        android:background="@color/ripple"
        android:paddingTop="@dimen/dp_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_send_report" />

    <TextView
        android:id="@+id/tv_send_report"
        style="@style/App.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32dp"
        android:layout_marginTop="@dimen/dp_16dp"
        android:layout_marginEnd="@dimen/dp_16dp"
        android:text="@string/reports_send_report"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        app:layout_constraintTop_toBottomOf="@id/tv_report_name" />

    <TextView
        android:id="@+id/tv_delete"
        style="@style/App.Button.Small.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32dp"
        android:layout_marginTop="@dimen/dp_16dp"
        android:text="@string/reports_delete_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_report_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
